DEBUG = 1

!IF "$(VERS)" == ""
VERS = 12.0
!ENDIF
!IF "$(PLAT)" == ""
PLAT = x86
!ENDIF
!IF "$(CONF)" == ""
CONF = Release
!ENDIF

!IF "$(PLAT)" == "x86"
BINCONF	= win32
!ELSE
BINCONF	= win64
!ENDIF

